{
  "name": "GyaonExtension",
  "version": "0.6.1",
  "description": "Chrome extension for gyaon.com",
  "icons": {
    "128": "icons/bigicon.png"
  },
  "browser_action": {
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "tabCapture",
    "downloads",
    "contextMenus",
    "notifications",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "scripts/content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "page": "pages/background.html",
    "persistent": true
  },
  "options_page": "pages/option.html",
  "options_ui": {
    "page": "pages/option.html",
    "open_in_tab": true
  },
  "commands": {
    "mic_rec": {
      "suggested_key": {
        "default": "Ctrl+R",
        "mac": "MacCtrl+R"
      },
      "description": "Toggle Mic Recording"
    },
    "tab_rec":{
      "suggested_key": {
        "default": "Ctrl+T",
        "mac": "MacCtrl+T"
      },
      "description": "Toggle tab Recording"
    },
    "stop_rec": {
      "suggested_key": {
        "default": "Ctrl+Shift+X",
        "mac": "MacCtrl+X"
      },
      "description": "Stop Capture"
    }
  },
  "web_accessible_resources": [
    "https://gyaon.com/*",
    "/icons/bigicon.png",
    "/icons/active.png",
    "/icons/deactive.png",
    "/icons/disable.png"
  ],
  "manifest_version": 2
}