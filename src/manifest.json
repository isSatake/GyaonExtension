{
  "name": "GyaonExtension",
  "version": "0.1.0",
  "description": "Chrome extension for gyaon.com",
  "icons" : {
  },
  "browser_action": {
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "cookies",
    "clipboardWrite",
    "contextMenus",
    "notifications"
  ],
  "content_scripts": [
    {
      "matches" : [ "<all_urls>"],
      "js": [
        "content.js"
      ],
      "run_at" : "document_idle"
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "options_page": "option/option.html",
  "options_ui": {
    "page": "option/option.html",
    "chrome_style": true
  },
  "web_accessible_resources": ["https://gyaon.com/*"],
  "manifest_version": 2
}